<section class="orders-show">

  <header class="page-header">
    <h1>Order Number <br>
    <%= @order.id %></h1> <%# Display the "current" order ID %>
  </header>

  <div class="jumbotron">
    <h4>Thank You For Shopping In The Jungle!</h4> 
    <h5>Email: <%= @order.email %></p> <%# Display the email of the user %>
  </div>

  <div class="jumbotron"> <%# set up the table to hold the information %>
    <table class="table">
      <thead>
        <tr>
          <th colspan="2">Your Order:</th> <%# column headers. product spanning over 2 %>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>  <%# loop through the order and display the items %>
          <%= render 'item', product: item.product, quantity: item.quantity.to_i %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents / 100.0 %> <%# print the final total %>
          </th>
        </tr>
      </tfoot>
    </table>
    </div>
  </div>

  
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %> <%# Link to return the root path to shop %>

</section>